$C = "../Common.ui";

@LevelLabel = Label {
  Style: (FontSize: 16, Alignment: Center, TextColor: #a0a0a0);
  Anchor: (Height: 20);
  Visible: false;
};

$C.@DecoratedContainer {
  Anchor: (Width: 1200, Height: 800);

  // Override CloseButton visibility
  Button #CloseButton {
    Visible: true;
  }

  // Add Title
  $C.@Title {
    Text: "Métiers";
    Anchor: (Top: 10, Height: 30, Left: 50, Right: 50);
  }

  Group #Content {
    LayoutMode: Top;
    Anchor: (Full: 0, Top: 50);
    Padding: (Top: 20, Bottom: 20, Left: 40, Right: 40);
    
    // Row 1
    Group {
      LayoutMode: Center;
      Anchor: (Height: 300);

      // FARMER
      Group {
        Background: $C.@InputBoxBackground;
        Anchor: (Width: 300, Height: 240);
        LayoutMode: Top;
        Padding: (Full: 15);

        Group {
          Background: #303030;
          Anchor: (Width: 70, Height: 70, Top: 5);
          LayoutMode: Center;

          Group {
            Background: (TexturePath: "../Tool_Hoe_Iron.png");
            Anchor: (Width: 50, Height: 50);
          }
        }
        Label { Text: "Fermier"; Style: (FontSize: 22, Alignment: Center, RenderBold: true, TextColor: #ebdcb0); Anchor: (Height: 30); Padding: (Top: 10); }
        
        @LevelLabel #lvlFARMER { Text: ""; }

        Group { Anchor: (Height: 20); }

        Group {
          LayoutMode: Center;
          Anchor: (Width: 230, Height: 44);
          $C.@TextButton #btnJoinFARMER { Text: "Rejoindre"; Anchor: (Full: 0); Visible: true; }
          $C.@CancelTextButton #btnLeaveFARMER { Text: "Quitter"; Anchor: (Full: 0); Visible: false; }
        }
      }

      Group { Anchor: (Width: 20); }

