$C = "../Common.ui";
$Nav = "JobsNavBar.ui";

$C.@PageOverlay {
    $Nav.@JobsNavBar {}

    $C.@DecoratedContainer {
        Anchor: (Width: 900, Height: 600);
        
        // Header
        Group #contentHeader {
            LayoutMode: Center;
            Anchor: (Width: 900, Height: 60, Top: 80);
            
            Label #pageTitle {
                Text: "Jobs Disponibles";
                Style: (FontSize: 24, TextColor: #4CAF50, RenderBold: true);
            }
        }
        
        // Container with scrolling
        Group #jobsContainer {
            LayoutMode: TopScrolling;
            ScrollbarStyle: $C.@DefaultScrollbarStyle;
            Anchor: (Width: 860, Height: 400, Left: 20, Top: 140);
            
            Group #jobsContent {
                LayoutMode: Top;
                Anchor: (Width: 860);
            }
        }
        
        // Pagination
        Group #paginationBar {
            LayoutMode: Center;
            Anchor: (Width: 900, Height: 60, Bottom: 0);
            
            Group #paginationButtons {
                LayoutMode: Left;
                Anchor: (Width: 300, Height: 40);
                
                Group #prevPageBtn {
                    Anchor: (Width: 140, Height: 40);
                    Background: (Color: #555555);
                    Padding: (Right: 20);
                    
                    Label {
                        Text: "◀ Précédent";
                        Style: (FontSize: 16, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center);
                    }
                }
                
                Group #nextPageBtn {
                    Anchor: (Width: 140, Height: 40);
                    Background: (Color: #555555);
                    
                    Label {
                        Text: "Suivant ▶";
                        Style: (FontSize: 16, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center);
                    }
                }
            }
        }
    }
}

$C.@BackButton {}