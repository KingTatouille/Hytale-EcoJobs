$C = "../Common.ui";

@JobsNavBar = Group {
    LayoutMode: Left;
    Anchor: (Width: 900, Height: 70, Top: 10);
    Background: (Color: #2c2c2c);
    Padding: (Full: 10);
    
    Group #navBtnJobs {
        Anchor: (Width: 150, Height: 50);
        Background: (Color: #4CAF50);
        Padding: (Right: 10);
        
        Label {
            Text: "Jobs";
            Style: (FontSize: 16, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
    }
    
    Group #navBtnStats {
        Anchor: (Width: 150, Height: 50);
        Background: (Color: #2196F3);
        Padding: (Right: 10);
        
        Label {
            Text: "Statistiques";
            Style: (FontSize: 16, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
    }
    
    Group #navBtnLeaderboard {
        Anchor: (Width: 150, Height: 50);
        Background: (Color: #FF9800);
        Padding: (Right: 10);
        
        Label {
            Text: "Classement";
            Style: (FontSize: 16, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
    }
    
    Group #navBtnClose {
        Anchor: (Width: 100, Height: 50, Right: 10);
        Background: (Color: #f44336);
        
        Label {
            Text: "Fermer";
            Style: (FontSize: 16, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
    }
};