$C = "../Common.ui";
$Nav = "JobsNavBar.ui";

$C.@PageOverlay {
    $Nav.@JobsNavBar {}

    $C.@DecoratedContainer {
        Anchor: (Width: 900, Height: 600);
        
        // Layout principal avec sidebar et contenu
        Group #mainLayout {
            LayoutMode: Left;
            Anchor: (Width: 900, Height: 520, Top: 80);
            
            // Sidebar pour s√©lection du job
            Group #sidebar {
                LayoutMode: TopScrolling;
                ScrollbarStyle: $C.@DefaultScrollbarStyle;
                Anchor: (Width: 200, Height: 520, Left: 0);
                Background: (Color: #1a1a1a);
                Padding: (Full: 10);
                
                Group #jobButtonsContent {
                    LayoutMode: Top;
                    Anchor: (Width: 180);
                }
            }
            
            // Contenu principal (leaderboard)
            Group #mainContent {
                LayoutMode: Top;
                Anchor: (Width: 700, Height: 520, Left: 200);
                Padding: (Full: 20);
                
                Label #selectedJobTitle {
                    Text: "Classement - Fermier";
                    Style: (FontSize: 24, TextColor: #4CAF50, RenderBold: true, HorizontalAlignment: Center);
                    Anchor: (Width: 660, Height: 40);
                    Padding: (Bottom: 10);
                }
                
                Group #rankingContainer {
                    LayoutMode: TopScrolling;
                    ScrollbarStyle: $C.@DefaultScrollbarStyle;
                    Anchor: (Width: 660, Height: 460, Top: 10);
                    
                    Group #rankingListContent {
                        LayoutMode: Top;
                        Anchor: (Width: 660);
                    }
                }
            }
        }
    }
}

$C.@BackButton {}