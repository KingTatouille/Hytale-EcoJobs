$C = "../Common.ui";

Group {
    LayoutMode: Left;
    Anchor: (Width: 700, Height: 55);
    Padding: (Full: 10, Bottom: 15);
    Background: (Color: #2c2c2c);
    
    Label #rank {
        Text: "#1";
        Style: (FontSize: 18, TextColor: #ffcc00, RenderBold: true);
        Anchor: (Width: 60, Height: 30);
        Padding: (Right: 15);
    }
    
    Label #playerName {
        Text: "PlayerName";
        Style: (FontSize: 16, TextColor: #ffffff);
        Anchor: (Width: 250, Height: 30);
        Padding: (Right: 15);
    }
    
    Label #level {
        Text: "Niveau 10";
        Style: (FontSize: 14, TextColor: #4CAF50);
        Anchor: (Width: 150, Height: 30);
        Padding: (Right: 15);
    }
    
    Label #xp {
        Text: "15000 XP";
        Style: (FontSize: 14, TextColor: #00ccff);
        Anchor: (Width: 150, Height: 30);
    }
}